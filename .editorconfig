# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation
[*.{css,html,html.twig,gql,js,json,scss,twig,vue,yaml,yml}]
indent_size = 2

[*.pug]
indent_style = tab
indent_size = 3
