extends layout

block headContent
	title Search

block content
	h1(class="h2") Search

	p Search for an address, asset, block, or transaction

	form(method="post", action="/search", class="form-inline")
		div(class="field layered w-12/12 max-w-lambda text-mu")
			input(type="text", class="field__input w-12/12", name="query", placeholder="Search", value=(query))
			div(class="icon field__icon text-quinary")
				button(type="submit")
					svg(class="icon")
						use(xlink:href="/sprite.svg#search", href="/sprite.svg#search")
