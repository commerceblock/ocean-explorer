extends layout

block headContent
	title Addresses

block content
	h1(class="h2") Addresses

	if (addressBalances)
		include includes/address-balances-list.pug

		if (balanceCount > limit)
			- var pageNumber = offset / limit + 1;
			- var pageCount = Math.floor(balanceCount / limit);
			- if (pageCount * limit < balanceCount) {
				- pageCount++;
			- }
			- var paginationUrlFunction = function(x) {
				- return paginationBaseUrl + "?limit=" + limit + "&offset=" + ((x - 1) * limit);
			- }

			include includes/pagination.pug
	else
		p No addresses found
