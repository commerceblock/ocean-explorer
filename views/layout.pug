doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0, shrink-to-fit=no")

		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Cousine")
		link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css")

		link(rel='stylesheet', href='/css/styling.css')
		link(rel='stylesheet', href='/css/font-license.css')
		link(rel="icon", type="image/png", sizes="32x32", href="/img/favicon-256.png")
		link(rel="icon", type="image/png", sizes="96x96", href="/img/favicon-256.png")
		link(rel="icon", type="image/png", sizes="16x16", href="/img/favicon-256.png")

		block headContent
			title GTSA Explorer

	body
		nav(class="header")
			if (env.testnet)
				div(class="test-bar")
					span testnet
			div(class="header__inner container flex items-center justify-between")
				a(class="header__logo text-primary", href="/")
					svg(class="icon icon--fill")
						use(xlink:href="/sprite.svg#dgld-logo", href="/sprite.svg#dgld-logo")

				button(type="button", class="header__toggle layered text-zeta text-primary", data-toggle="collapse", data-target="#navbarNav")
					svg(class="icon")
						use(xlink:href="/sprite.svg#menu", href="/sprite.svg#menu")

				div(class="collapse navbar-collapse header__overlay", id="navbarNav")
					ul(class="header__nav mb-2r flex flex-wrap items-center grid grid--md font-medium")
						li(class="grid__item header__item")
							a(href="/blocks", class="header__link") Blocks
						li(class="grid__item header__item")
							a(href="/assets", class="header__link") Assets
						li(class="grid__item header__item")
							a(href="/addresses", class="header__link") Addresses
						li(class="grid__item header__item")
							a(href="/mempool-summary", class="header__link") Mempool
						li(class="grid__item header__item")
							a(href="/node-details", class="header__link") Status
					form(method="post", action="/search", class="form-inline")
						div(class="field layered w-12/12 max-w-lambda text-mu")
							input(type="text", class="field__input w-12/12", name="query", placeholder="Search", value=(query), style="width: 250px;")
							div(class="icon field__icon text-quinary")
								button(type="submit")
									svg(class="icon")
										use(xlink:href="/sprite.svg#search", href="/sprite.svg#search")

		div(class="main-content")

			div(class="container")
				if (userMessage)
					div(class="alert", class=(userMessageType ? ("alert-"  + userMessageType) : "alert-info"), role="alert")
						span !{userMessage}

			div(class="container")
				block content

		script(src='/js/app.js')
		script(src="https://code.jquery.com/jquery-3.2.1.min.js", integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=", crossorigin="anonymous")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js", integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q", crossorigin="anonymous")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js", integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb", crossorigin="anonymous")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js", integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl", crossorigin="anonymous")

		script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js")

		script(src="https://cdn.ravenjs.com/3.22.4/raven.min.js", crossorigin="anonymous")
		script.
			Raven.config('https://0bf20e8357a748cab8aa9d35c0f790dd@sentry.io/130800').install();

			$(document).ready(function() {
				$('[data-toggle="tooltip"]').tooltip();
				$('[data-toggle="popover"]').popover({html:true});
			});

			hljs.initHighlightingOnLoad();

		block endOfBody
